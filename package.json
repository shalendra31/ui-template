{
  "name": "ui-template",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently -k -n server,client \"npm:dev -w server\" \"npm:dev -w client\"",
    "build": "npm -w server run build && npm -w client run build",
    "start": "npm -w server run start",
    "lint": "echo \"Add your linter here (eslint/prettier)\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}